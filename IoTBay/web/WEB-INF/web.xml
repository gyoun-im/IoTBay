<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConnServlet</servlet-name>
        <servlet-class>iotbay.controller.ConnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShipmentDetailsServlet</servlet-name>
        <servlet-class>iotbay.controller.ShipmentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShipmentServlet</servlet-name>
        <servlet-class>iotbay.controller.ShipmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addShipmentDetails</servlet-name>
        <servlet-class>iotbay.controller.addShipmentDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addShipmentDetailsServlet</servlet-name>
        <servlet-class>iotbay.controller.addShipmentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteShipmentDetailsServlet</servlet-name>
        <servlet-class>iotbay.controller.DeleteShipmentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditShipmentDetailsServlet</servlet-name>
        <servlet-class>iotbay.controller.EditShipmentDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateShipmentDetailsServlet</servlet-name>
        <servlet-class>iotbay.controller.UpdateShipmentDetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnServlet</servlet-name>
        <url-pattern>/ConnServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShipmentDetailsServlet</servlet-name>
        <url-pattern>/ShipmentDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShipmentServlet</servlet-name>
        <url-pattern>/ShipmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addShipmentDetails</servlet-name>
        <url-pattern>/addShipmentDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addShipmentDetailsServlet</servlet-name>
        <url-pattern>/addShipmentDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteShipmentDetailsServlet</servlet-name>
        <url-pattern>/DeleteShipmentDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditShipmentDetailsServlet</servlet-name>
        <url-pattern>/EditShipmentDetailsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateShipmentDetailsServlet</servlet-name>
        <url-pattern>/UpdateShipmentDetailsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
